<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.appmovilagenda"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Debe ser la ÃšNICA activity con MAIN/LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- El resto sin MAIN/LAUNCHER -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".InicioTareasActivity" />
        <activity android:name=".CalendarioActivity" />
        <activity android:name=".SemanaActivity" />
        <activity android:name=".DiaActivity" />
        <activity android:name=".EditarTareaActivity" />
        <activity android:name=".CrearTareaActivity" />
    </application>
</manifest>