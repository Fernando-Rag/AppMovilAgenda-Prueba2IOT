<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esta Semana"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Chips vista -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MES"
                android:textStyle="bold"
                android:textColor="#1F4226"
                android:background="@drawable/chip_green"
                android:paddingHorizontal="16dp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semana"
                android:textStyle="bold"
                android:textColor="#6B4E2E"
                android:background="@drawable/chip_brown"
                android:paddingHorizontal="16dp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dia"
                android:textColor="#1F4226"
                android:background="@drawable/chip_green"
                android:paddingHorizontal="16dp"/>
        </LinearLayout>

        <!-- Rango semanas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-6"
                android:textColor="#1F4226"
                android:background="@drawable/chip_green"
                android:paddingHorizontal="16dp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7-13"
                android:textStyle="bold"
                android:textColor="#6B4E2E"
                android:background="@drawable/chip_brown"
                android:paddingHorizontal="16dp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14-20"
                android:textColor="#1F4226"
                android:background="@drawable/chip_green"
                android:paddingHorizontal="16dp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21-27"
                android:textColor="#1F4226"
                android:background="@drawable/chip_green"
                android:paddingHorizontal="16dp"/>
        </LinearLayout>

        <!-- Lista de días con cajas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@android:color/transparent"
            android:showDividers="none">

            <!-- Repite este bloque por día -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUN"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>

            <!-- MAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAR"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>

            <!-- MIE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIE"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>

            <!-- JUE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JUE"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>

            <!-- VIE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIE"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>

            <!-- SAB -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAB"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>

            <!-- DOM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOM"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_outline_green"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>